    "tw-animate-css": "^1.3.6",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.0",
    "vite": "^4.5.14",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "three": "^0.179.1",
    "@react-three/fiber": "^9.3.0",
    "@react-three/drei": "^10.6.1"
  },
